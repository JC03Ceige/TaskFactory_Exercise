<Window x:Class="TaskFactory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskFactory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="txtUrl" Width="200" Padding="5"/>
            <Button x:Name="btnSubmitUrl" Content="Submit" Click="btnSubmit_Click" Width="100" Padding="2" Margin="10"/>
            <Button x:Name="btnThrowError" Content="Error" Click="btnThrowError_Click" Width="100" Margin="5" Padding="2"/>
            <Label x:Name="lblResult" Content=""/>

        </StackPanel>
        
    </Grid>
</Window>
